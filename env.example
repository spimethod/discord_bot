# Discord Bot Token (получите на https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here

# Telegram Bot Token (получите у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID (ID чата куда отправлять сообщения)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Channel ID (ID канала который отслеживать)
CHANNEL_ID=your_discord_channel_id_here

# Список разрешенных ботов (опционально, через запятую, оставьте пустым для всех ботов)
# Например: ALLOWED_BOTS=PolyAlert БОТ,AnotherBot
ALLOWED_BOTS=

# Discord Webhook URL (альтернативный способ мониторинга)
# Получите вебхук: настройки канала → Интеграции → Создать вебхук
WEBHOOK_URL= 